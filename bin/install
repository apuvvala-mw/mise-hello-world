#!/usr/bin/env bash

echo "[DEBUG] INSTALL_PATH='$INSTALL_PATH'"
echo "[DEBUG] VERSION='$VERSION'"

if [[ -z "$INSTALL_PATH" || -z "$VERSION" ]]; then
  echo "[ERROR] Missing INSTALL_PATH or VERSION"
  exit 1
fi

mkdir -p "$INSTALL_PATH"

cat > "$INSTALL_PATH/hello-world.sh" <<EOF
#!/usr/bin/env bash
echo "Hello from hello-world v$VERSION"
EOF

chmod +x "$INSTALL_PATH/hello-world.sh"
